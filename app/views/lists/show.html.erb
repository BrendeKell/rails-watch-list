<div class="container">
  <h1>My <%= @list.name%> list</h1>
  <div class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <!-- Affichage du titre et de l'aperÃ§u du film -->
          <h5><%= bookmark.movie.title %></h5>
          <p><%= bookmark.comment %></p>
          <%= link_to "Delete from this list",  bookmark_path(bookmark), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'Add a Movie', new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "Back to all my lists", lists_path, class: "btn btn-danger"%>
</div>
